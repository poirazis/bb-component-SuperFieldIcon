        "nested": true
      },
      {
        "type": "text",
        "label": "Help text",
        "key": "helpText"
      },
      {
        "type": "text",
        "label": "Input Mask",
        "key": "mask",
        "hidden": true
      },
      {
        "type": "validation/string",
        "label": "Validation",
        "key": "validation"
      },
      {
        "type": "event",
        "label": "On change",
        "key": "onChange",
        "context": [
          {
            "label": "Field Value",
            "key": "value"
          }
        ]
      },
      {
        "type": "boolean",
        "label": "Categories",
        "key": "showCategories"
