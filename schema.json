    "ejectable": false,
    "context": [
      {
        "type": "static",
        "values": [
          {
            "label": "Value",
            "key": "value",
            "type": "string"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "field/string",
        "label": "Field",
        "key": "field",
        "defaultValue": "Icon Field"
      },
      {
        "type": "text",
        "label": "Label",
        "key": "label",
        "placeholder": "Field Name"
      },
      {
        "type": "text",
        "label": "Placeholder",
        "key": "placeholder"
      },
      {
        "type": "text",
        "label": "Default value",
        "key": "defaultValue",
        "supportsConditions": false
      },
      {
        "type": "text",
        "label": "Formatted value",
        "key": "template",
        "placeholder": "{{ Value }}",
